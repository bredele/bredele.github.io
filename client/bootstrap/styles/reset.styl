html
  font-size: 62.5%
  font-family: "proxima-nova",sans-serif
  color: #57534a;
  height:100%
  -webkit-font-smoothing: antialiased
  
html,
body,
ul
  margin:0
  padding:0

body
  font-size: 1.4em /* equiv 14px */
  line-height: 1.5 
  height:100%

*
  box-sizing:border-box

ul
  list-style:none

a
  text-decoration:none

input
  background:transparent

.container
  width:960px;
  margin:0 auto

p,
blockquote,
pre,
td,
th,
label,
textarea,
caption,
details, 
figure 
  font-size: 1em /* equiv 14px */
  line-height: 1.5
  margin: .75em 0 0

.abs
  absolute: top 0 left 0%

//scripts
body > script
  display: none !important

//title
h1
  font-size: 1.8571em /* equiv 26px */
  font-weight: normal
  line-height: 1.6154em
  margin: .8077em 0 0 0



//max-width
img,
table,
td,
textarea,
input,
  max-width: 100%


//img
img
  height: auto
  vertical-align: middle

.header
  height: 300px
  background: #2B2B2B

::selection
  background-color: #2B2B2B
  color: #eee
